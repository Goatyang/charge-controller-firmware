/dts-v1/;
#include <st/l0/stm32l073Xz.dtsi>

/ {
	model = "Libre Solar MPPT 1210 HUS v0.4";
	compatible = "st,stm32l073";

	charge-controller {
		compatible = "charge-controller";
		hs-voltage-max = <40>;
		ls-voltage-max = <16>;
	};

	dcdc {
		compatible = "dcdc";
		pwm-frequency = <50000>;
		pwm-deadtime = <230>;
		current-max = <10>;
	};

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	leds {
		compatible = "gpio-leds";
		gnd {
			gpios = <&gpiob 14 GPIO_ACTIVE_HIGH>;
			label = "LED GND";
		};
		soc12 {
			gpios = <&gpiob 13 GPIO_ACTIVE_HIGH>;
			label = "LED SOC12";
		};
		soc3 {
			gpios = <&gpiob 2 GPIO_ACTIVE_HIGH>;
			label = "LED SOC3";
		};
		rxtx {
			gpios = <&gpiob 11 GPIO_ACTIVE_HIGH>;
			label = "LED RXTX";
		};
		load {
			gpios = <&gpiob 10 GPIO_ACTIVE_HIGH>;
			label = "LED Load";
		};
	};

	switches {
		compatible = "switch";
		load {
			gpios = <&gpioc 13 GPIO_ACTIVE_HIGH>;
			label = "Load enable";
		};
		usb-pwr {
			gpios = <&gpiob 12 GPIO_ACTIVE_HIGH>;
			label = "USB charging port enable";
		};
	};

	aliases {
		uart-dbg = &usart1;
		uext-uart = &usart2;
		spi-uext = &spi1;
		i2c-uext = &i2c1;
	};
};

&usart1 {
	current-speed = <115200>;
	status = "okay";
};

&usart2 {
	current-speed = <115200>;
	status = "okay";
};

&i2c1 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
};

&spi1 {
	status = "okay";
};

&iwdg {
	status = "okay";
};

&adc1 {
	status = "okay";
};

&eeprom {
	status = "okay";
};

/dts-v1/;
#include <st/l0/stm32l073Xz.dtsi>

/ {
	model = "Libre Solar PWM 2420 LUS v0.3";
	compatible = "st,stm32l073";

	charge-controller {
		compatible = "charge-controller";
		hs-voltage-max = <55>;
		ls-voltage-max = <32>;
	};

	pwm-switch {
		compatible = "pwm-switch";
		pwm-frequency = <50>;
		// Current reduced to 15A. Increase to 20A PCB max values
		// only if attached to a big heat sink.
		current-max = <15>;
	};

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	leds {
		compatible = "gpio-leds";
		a {
			gpios = <&gpiob 13 GPIO_ACTIVE_HIGH>;
			label = "LED pin A";
		};
		b {
			gpios = <&gpiob 14 GPIO_ACTIVE_HIGH>;
			label = "LED pin B";
		};
		c {
			gpios = <&gpiob 15 GPIO_ACTIVE_HIGH>;
			label = "LED pin C";
		};
	};

	switches {
		compatible = "switch";
		load {
			gpios = <&gpiob 2 GPIO_ACTIVE_LOW>;
			label = "Load disable";
		};
		usb-pwr {
			gpios = <&gpiob 5 GPIO_ACTIVE_LOW>;
			label = "USB charging port disable";
		};
		boot0 {
			gpios = <&gpiob 12 GPIO_ACTIVE_HIGH>;
			label = "BOOT0 pin trigger";
		};
	};

	aliases {
		uart-dbg = &usart1;
		uext-uart = &usart2;
		spi-uext = &spi1;
		i2c-uext = &i2c1;
	};
};

&usart1 {
	current-speed = <115200>;
	status = "okay";
};

&usart2 {
	current-speed = <115200>;
	status = "okay";
};

&i2c1 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
};

&spi1 {
	status = "okay";
};

&iwdg {
	status = "okay";
};

&adc1 {
	status = "okay";
};

&eeprom {
	status = "okay";
};
